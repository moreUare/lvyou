page{
  background-color: #fff;
}
.identify{
  padding: 50rpx;
}
/*信息*/
.info{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.info > text{
  font-size: 16px;
  margin-bottom: 10rpx;
}
.info view{
  font-size: 12px;
  color: #ccc;
}
.info view text:first-child{
  color: rgb(113,184,233);
}
/**************号码输入框*******************/
.dashed{
  width: 270rpx;
  /* margin: 0 auto; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: -60rpx;
}

.dashedItem{
  flex: 1;
  display: inline-block;
  border: 1rpx solid #ccc;
  height: 60rpx;
  margin-right: 3rpx;
}

.codeInput{
  display: block;
  width: 100%;
  color: #000;
  height: 100rpx;
  margin-left: -25%;
  margin-bottom: -60rpx;
}

.cursor {
  width: 1px;
  height:60rpx;
  background-color: #000;
  animation: focus 0.7s infinite;
}

.getcode.active{
  background: #000;
}

@keyframes focus {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.inputCon{
  width: 270rpx;
  /* margin: 0 auto; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start; 
}
.inputItem{
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  text-align: center;
}
.inputItem>text{
  font-size: 43rpx;
}
/******************************************/




/*按钮*/
.bind button{
  margin-top: 30rpx;
  background-color: #000;
  line-height: 70rpx;
} 
.bind button text{
  color: #eee;
}
/*疑问*/
.doubt{
  font-size: 12px;
  margin-top: 30rpx;
  color: rgb(113, 184, 223); 
}

/*蒙版*/
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
/* 模态框 绑定成功 */
.modalDlgSucc{
    width: 500rpx;
    height: 340rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 9999;
    margin: -170rpx -250rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}
.modalDlgSucc image{
    margin: 30rpx auto 30rpx;
    width: 78rpx;
    height: 78rpx;
}
.modalDlgSucc text{
    text-align: center;
    font-size: 12px; 
    margin-bottom: 50rpx;
}
.modalDlgSucc button{
    width: 148rpx;
    height: 54rpx;
    line-height: 54rpx;
    background-color: rgb(113,184,233);   
}
.modalDlgSucc button text{
    color: #fff; 
}

/* 模态框 绑定失败  验证码输入错误*/
.modalDlgLoss{
    width: 500rpx;
    height: 340rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 9999;
    margin: -170rpx -250rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}
.modalDlgLoss image{
    margin: 30rpx auto 30rpx;
    width: 78rpx;
    height: 78rpx;
}
.modalDlgLoss text{
    text-align: center;
    font-size: 12px;
}
.modalDlgLoss .reback{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.reback button:first-child{
  background-color: #eee;
  width: 148rpx; height: 58rpx;
  line-height: 58rpx;
  margin-right: 10rpx;
}
.reback button:last-child{
  background-color: rgb(113,184,233);
  width: 148rpx; height: 58rpx;
  line-height: 58rpx;
  color: #fff;
  margin-left: 10rpx;
} 