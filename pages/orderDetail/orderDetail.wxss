/* pages/orderDetail/orderDetail.wxss */
page{
  background-color: #eee;
}
.orderDetail{
  /* display: flex;
  flex-direction: column; */
}
/*****************************/
/*产品*/
.product{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx;
  background-color: #fff; 
  border-radius: 2px;
}
.picture{
  margin: 30rpx;
  border-radius: 5%;
}
/*右侧文字*/
.right_word{
  margin: 20rpx;
  margin-left: 0rpx;
}
.right_word > text{
  font-size: 16px;
  font-weight: bold;  
}
.evaluate{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.evaluate image{
  margin-right: 15rpx;
}
.evaluate_word text{
  font-size: 12px;
  padding: 7rpx;
  background-color: #eee;
  margin-right: 10rpx;
  border-radius: 2px;
}
/*****************************/
/*订单信息*/
.order_infor{
  margin: 20rpx;
  background-color: #fff;
  border-radius: 2px;
  padding: 40rpx;
}
.first_child{
  font-size: 14px;
  font-weight: bold;
  flex: 1;
  text-align: right;
  margin-right: 50rpx;
}
.last_child{
  font-size: 13px;
  flex: 3;
  text-align: left;
}
.flexBox{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}
.flexBox:last-child{
  margin-bottom: 0rpx;
}
/*订单编号*/
.number{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
/*付款时间*/
.payment text{ 
}
/*目的地*/
.destination{
}
/*产品名称*/
.name{
}
.tag text{
  background-color: #eee;
  padding: 10rpx;
  margin-right: 10rpx;
  border-radius: 2px;
}
/*状态*/
.status{
}
.status text:last-child{
  color: rgb(113, 184, 223);
}
/*****************************/
/*出行口令*/
.order_contact{
  margin: 20rpx;
  background-color: #fff;
  padding: 0rpx 80rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
/*出行口令*/
.password{
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1px dotted #eee;
  line-height: 30px;
  align-items: center;
}
.password view:first-child{
  font-size: 14px;
  flex: 1;
  text-align: left;
}
.password view:last-child{
  font-size: 24px;
  color: #666;
  font-weight: bold;
  flex: 2;
  text-align: right;
}
/*联系商家*/
.contact{
  padding: 23rpx 0rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  line-height: 30px;
}
.contact text{
  font-size: 14px;
  flex: 2;
  text-align: left;
  display: block;
}
.contact button{
  flex: 1;
  height: 68rpx;
}
.contact > button > text{
  color: #fff;
}
/*****************************/
/*取消订单*/
.cancel{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  text-align: center;
  line-height: 88rpx;
  font-size: 16px;
  box-shadow: 0px -0.3px 10px 0 #666;
}
/* 蒙版 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
/* 模态框 取消订单 */
.ModalDialog{
    width: 500rpx;
    height: 600rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 9999;
    margin: -340rpx -250rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: center;
}
/*标题*/
.ModalDialog text{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: 14px;
  font-weight: bold;
}
/*radio*/
.radio-group{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.radio{
  font-size: 12px;
  color: #777;
  margin-bottom: 20rpx;
}
.reback{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
/*按钮*/
.reback button:first-child{
  background-color: rgb(113,184,233);
  color: #fff;
  width: 148rpx; height: 58rpx;
  line-height: 58rpx;
  margin-right: 10rpx;
}
.reback button:last-child{
  background-color: #eee;
  width: 148rpx; height: 58rpx;
  line-height: 58rpx;
  margin-left: 10rpx;
} 
/* 模态框 提交成功 */
.submit{
  height: 320rpx;
}